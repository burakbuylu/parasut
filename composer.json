{
    "name": "burakbuylu/parasut",
    "description": "Paraşüt API entegrasyonu için modern ve kullanımı kolay PHP paketi",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Burak Buylu",
            "email": "burak@burtinet.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "BurakBuylu\\Parasut\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BurakBuylu\\Parasut\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 